<!DOCTYPE html>
<html>
<head>
  <title>Hippo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap/css/bootstrap", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <% csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <ul class="nav">
          <li>
            <a class='brand' href="#" >Hippo</a>
          </li>
              <li>
                <%= form_tag(:searchall, :method => "get") do %>
                  <%= text_field_tag :q,'',:size=>40 %>
                  <%= submit_tag("Search", :class=>'btn small info') %>
                <% end %>
              </li>
        </ul>
      </div>
    </div>
  </div>

  <% flash.each do |key, msg| %>
    <div id="msg" class="alert">
      <%= msg %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
