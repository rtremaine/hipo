<!DOCTYPE html>
<html>
<head>
  <title>Hippo</title>
  <%= stylesheet_link_tag "bootstrap/css/bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag "jquery.fileupload-ui.css" %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%#= javascript_include_tag 'bootstrap.min.js' %>
  <%= javascript_include_tag 'jquery-1.7.1.min.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8.17.custom.min.js' %>


  <link href='http://fonts.googleapis.com/css?family=Allura' rel='stylesheet' type='text/css'>
  <% csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <ul class="nav">
          <li>
            <a class='brand' href="#" >Hippo</a>
          </li>
          <li>
            <%= link_to 'Dentists', :dentists %>
          </li>
          <li>
            <%= link_to 'Patients', :patients %>
          </li>
        </ul>
          <ul class='nav pull-right'>
          <% if current_user %>
            <li><%=  link_to current_user.email, '/' %></li>
            <li><%= link_to "Logout", '/logout' %></li>
          <% else %>
            <li><%= link_to("Login", new_user_session_path ) %></li>
          <% end %>
        </ul>
        </ul>
      </div>
    </div>
  </div>

  <% flash.each do |key, msg| %>
    <div id="msg" class="alert">
      <%= msg %>
    </div>
  <% end %>

  <% if current_user %>
    <div class='alert alert-info'>
      Using machine generated patient and doctor information.
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
