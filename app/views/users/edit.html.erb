<%= semantic_form_for current_user do |f| %>
  <%= f.inputs do %>
    <%= f.input :email, :input_html => { :disabled => true } %>
    <%= f.input :name, :input_html => { :size => 50 } %>
    <% f.input :company, :as => :string, :input_html => { :size => 50 } %> 
  <% end %>
  <%= f.buttons %>
<% end %>

