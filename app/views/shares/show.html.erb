<table width='90%'>
  <tr>
    <td halign='bottom'> 
        On
    </td>
    <td>
      <h1>
        <%= @share.created_at.to_s(:long) %> 
      </h1>
    </td>
  </tr>
  <tr>
    <td>
        You shared the records called
    </td>
    <td>
      <h1>
        <%= @share.record_set.name %>
      </h1>
    </td>
  </tr>
  <tr>
    <td>
        On behalf of
    </td>
    <td>
      <h1>
        <%= @share.record_set.patient.name %>
      </h1>
    </td>
  </tr>
  <tr>
    <td>
        With
    <td>
      <h1>
        <%= @share.recipient.user.username %>
      </h1>
    </td>
  </tr>
  <tr>
    <td>
        Who
    </td>
    <td>
      <h1>
        <% if @share.received_date %>
          Received them <%= @share.received_date.to_s(:long) %>
        <% else %>
          Has yet to pick up these records
        <% end %>
      </h1>
    </td>
  </tr>
  <tr>
    <td>
      Confirmation code
    </td>
    <td>
      <h1>
        <%= @share.token %>
      </h1>
    </td>
  </tr>
</table>

<% unless @share.recipient.confirmed %>
  <h2>
    Note: <%= @share.recipient.user.username %> is not yet a confirmed contact of yours.
  </h2>
<% end %>

<center>
  <div class='well'>
    <%= link_to 'Confirm', send_new_share_email_path, :class => 'btn btn-primary btn-large' %>
  </div>
</center>


<%= link_to 'Edit', edit_share_path(@share) %> |
<%= link_to 'Destroy', @share, confirm: 'Are you sure?', method: :delete %> |
<%= link_to 'Back', shares_path %>
