<tr>
  <td>
    <% if share.needs_confirm %>
      <%= raw '<i class=\'icon-lock\'></i>' %>
      <%= link_to share.record_set.patient.name + ' - ' + share.record_set.name,  confirm_path(share.id) %>
      <%= link_to share.record_set.patient.name + ' - ' + share.record_set.name, :controller => 'record_sets', :action => 'view', :id => share.record_set.id %>
      <%= link_to share.record_set.patient.name + ' - ' + share.record_set.name, share.record_set %>
    <% else %>
      <%= link_to share.record_set.patient.name + ' - ' + share.record_set.name, :controller => 'record_sets', :action => 'view', :id => share.record_set.id %>
    <% end %>
  </td>
  <td><%= link_to share.sender.username, share.recipient.user %></td>
  <td><%= link_to share.recipient.user.username, share.recipient.user %></td>
  <td><%= share.created_at.to_s(:short) + ' - (' + time_ago_in_words(share.created_at) + ')' %></td>
  <td><%= share.received_date || '-' %></td>
</tr>

