<h1>Listing shares</h1>

<table>
  <tr>
    <th>Sender</th>
    <th>Recipient</th>
    <th>Record set</th>
    <th>Received date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.sender_id %></td>
    <td><%= share.recipient_id %></td>
    <td><%= share.record_set_id %></td>
    <td><%= share.received_date %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

