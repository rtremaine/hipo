<h1>Shares</h1>

<table width='80%'>
  <tr>
    <th>Recipient</th>
    <th>When</th>
    <th>Patient</th>
    <th>Record set</th>
    <th>Received date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.recipient.user.username %></td>
    <td><%= share.created_at.to_s(:short) %></td>
    <td><%= share.record_set.patient.name %></td>
    <td><%= link_to share.record_set.name, share.record_set %></td>
    <td><%= share.received_date || '-' %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

